#!/bin/bash -eu

source $OPENSHIFT_AG_UNIFIED_PUSH_DIR/bin/util

case "$1" in
  -v|--version)
    version="$2"
esac

echo "$version" > "$OPENSHIFT_AG_UNIFIED_PUSH_DIR/env/OPENSHIFT_AG_UNIFIED_PUSH_VERSION"

ln -s ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/standalone/log ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/logs

shopt -s dotglob
cp -r ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/versions/${version}/template/* ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/template
cp -r ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/versions/${version}/template/.openshift ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/template
cp ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/standalone/configuration/standalone.xml ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/template/.openshift/config

sed -i "s/{APP_NAME}/${OPENSHIFT_APP_NAME}/g" ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/template/pom.xml

# Create and install the initial template WAR
pushd $OPENSHIFT_AG_UNIFIED_PUSH_DIR/versions/${version}/template/src/main/webapp 1> /dev/null
  jar cvf $OPENSHIFT_AG_UNIFIED_PUSH_DIR/standalone/deployments/ROOT.war ./*
popd 1> /dev/null

JBOSS_HOME=/etc/alternatives/jbossas-$version
pushd $OPENSHIFT_AG_UNIFIED_PUSH_DIR 1> /dev/null
  ln -s ${JBOSS_HOME}/jboss-modules.jar
  ln -s ${JBOSS_HOME}/modules
popd 1> /dev/null

touch ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/env/OPENSHIFT_AG_UNIFIED_PUSH_CLUSTER
touch ${OPENSHIFT_AG_UNIFIED_PUSH_DIR}/env/OPENSHIFT_AG_UNIFIED_PUSH_CLUSTER_REMOTING

update-configuration java7
